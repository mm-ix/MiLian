<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.PhoneQingLvKongJian2" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- 基础应用主题 -->
    <style name="Theme.CoupleApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- 主要颜色 -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- 次要颜色 -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/primary_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- 状态栏颜色 -->
        <item name="android:statusBarColor">@color/primary</item>
        <!-- 背景颜色 -->
        <item name="android:windowBackground">@color/background_light</item>
        <!-- 文字颜色 -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <!-- 按钮样式 -->
        <item name="materialButtonStyle">@style/Widget.CoupleApp.Button</item>
    </style>
    
    <!-- 自定义按钮样式 -->
    <style name="Widget.CoupleApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">20dp</item>
    </style>
    
    <!-- 无ActionBar的主题 -->
    <style name="Theme.CoupleApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>